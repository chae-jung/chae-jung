<script text="text/javascript">
   // document.getElementById("btn1").onclick = cb("red");
// document.getElementById("btn2").onclick = cb("blue");


function cb(cl) {
    document.body.style.backgroundColor = cl;
}

function reset(){
    document.body.style.backgroundColor = 'white';
}
</script>
