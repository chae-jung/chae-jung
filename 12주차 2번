<body style="background-color: white;">
    <button id="btn1" onclick="cb('blue');">Blue</button>
    <button id="btn2" onclick="cb('red');">Red</button>
    <button id="reset" onclick="reset();">Reset</button>
    <script src="script/21.js" type="text/javascript">
    </script>
